{
	"compilerOptions": {
		"target": "esnext",
		"module": "commonjs",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"baseUrl": ".",
		"paths": {
			"@trp/*": ["./packages/*/src"],
			"@trp/types": ["./packages/types"],
			"@trp/nui": ["./packages/nui"],
			"@trp/nui/*": ["./packages/nui/*"]
		}
	},
	"exclude": ["node_modules", "dist", "**/*.spec.ts", "**/*.test.ts"]
}
